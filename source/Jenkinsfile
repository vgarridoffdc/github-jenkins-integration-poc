pipeline {
    agent {
        docker {
            image 'node:14-alpine'
        }
    }
    
    stages {
        stage('Cloning Git') {
            steps {
                git 'https://github.com/DeveloperWakeling/mocha_testing'
            }
        }
        stage('Install Dependencies'){
            steps {
                sh 'cd source && npm install'
            }
        }
        stage ('Test') {
            steps {
                sh 'cd source && npm test'
            }
        }
    }
}